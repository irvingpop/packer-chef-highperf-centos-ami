{
    "min_packer_version": "1.3.0",
    "builders": [
        {
            "type": "amazon-ebssurrogate",
            "region": "us-east-1",
            "ami_regions": [
                "us-west-2"
            ],
            "ami_name": "centos-8-minimal-install-{{isotime \"200601021504\"}}",
            "ami_description": "CentOS 8 minimal installation from scratch https://github.com/irvingpop/packer-chef-highperf-centos7-ami",
            "ssh_username": "ec2-user",
            "instance_type": "t3.large",
            "ssh_pty": "true",
            "source_ami": "ami-0c322300a1dd5dc79",
            "ami_virtualization_type": "hvm",
            "ebs_optimized": true,
            "ena_support": true,
            "sriov_support": true,
            "launch_block_device_mappings": [
                {
                    "volume_type": "gp2",
                    "device_name": "/dev/sdf",
                    "delete_on_termination": true,
                    "volume_size": 8
                }
            ],
            "ami_root_device": {
                "source_device_name": "/dev/sdf",
                "device_name": "/dev/sda1",
                "delete_on_termination": true,
                "volume_size": 8,
                "volume_type": "gp2"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "sudo -E -S bash -x '{{ .Path }}' -s false",
            "script": "create_base_ami8.sh"
        }
    ]
}
